<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-
2.dtd">

<sqlMap namespace="Member">

	<resultMap id="MemberList" class="Member">
		<result property="userId" column="user_id" />
		<result property="email" column="email" />
		<result property="password" column="password" />
		<result property="firstName" column="first_name" />
		<result property="lastName" column="last_name" />
	</resultMap>
	
	<resultMap id="Me2DayMemberList" class="dto.Me2DayMember">
		<result property="userId" column="user_id" />
		<result property="userKey" column="user_key" />
	</resultMap>
	
	<insert id="registerMember" parameterClass="Member">
		insert into member
		values (#userId#, #email#, #password#, #firstName#, #lastName#)
	</insert>
	
	<insert id="registerMe2DayMember" parameterClass="dto.Me2DayMember">
		insert into member_me2day
		values (#userId#, #userKey#)
	</insert>
	
	<select id="isExist" parameterClass="String" resultClass="Member">
		select * from member
		where user_id=#userId#
	</select>
	
	<select id="isExistMe2DayMember" parameterClass="String" resultClass="dto.Me2DayMember">
		select * from member_me2day
		where user_id=#userId#
	</select>
	
</sqlMap>