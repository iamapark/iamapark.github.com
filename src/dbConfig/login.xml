<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-
2.dtd">

<sqlMap namespace="Login">

	<resultMap id="LoginList" class="Login">
		<result property="userId" column="user_id" />
		<result property="password" column="password" />
	</resultMap>
	
	<resultMap id="Me2DayMemberList" class="dto.Me2DayMember">
		<result property="userId" column="user_id" />
		<result property="userKey" column="user_key" />
	</resultMap>
	
	<select id="loginCheck" parameterClass="Login" resultClass="Login">
		select user_id, password from member 
		where user_id=#userId# and password=#password#
	</select>
	
	<select id="me2DayLoginCheck" parameterClass="dto.Me2DayMember" resultClass="dto.Me2DayMember">
		select user_id, user_key from member_me2day
		where user_id=#userId# and user_key=#userKey#
	</select>
	
</sqlMap>